<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_container"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:background="#8a8e99"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_inner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13.3dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.hs.mobile.gw.view.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="48.3dp"
                    android:layout_height="48.3dp"
                    android:src="@drawable/profile_none"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/lnb_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="홍공유"
                        android:textSize="13.3sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/lnb_user_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:paddingTop="5dp"
                        android:text="미디어컨텐츠개발부"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13.3dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/btn_log_out"
                android:layout_width="89.3dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:background="@drawable/style_btn_gr_background"
                android:textColor="#393939"
                android:textSize="12dp"
                android:text="로그아웃"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>