<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/fragment_sub_header"></include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_bottom"
        android:visibility="visible" >

        <Button
            android:id="@+id/ID_BTN_CANCEL"
            style="@style/header_button"
            android:layout_centerVertical="true"
            android:text="@string/label_cancel" />

        <TextView
            android:id="@+id/middleNavibarTitle"
            style="@style/header_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:text="@string/label_sp_create"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/ID_BTN_ADD_SQUARE"
            style="@style/header_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/label_squareplus_square_create_add" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ID_LAY_F_MAILWRITE"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/ID_SCROLL_VIEW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:transcriptMode="alwaysScroll" >

            <LinearLayout
                android:id="@+id/ID_LAY_L_INNERSCROLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ID_LAY_L_TITLE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/TextView001"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:text="@string/label_squareplus_square_create_name"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/ID_ED_GROUP_TITLE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:background="@color/white"
                            android:ems="10"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="15sp" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/light_gray" >
                    </View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ID_LAY_L_TO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:text="@string/label_squareplus_square_create_member"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <com.hs.mobile.gw.view.ContactsCompletionView
                            android:id="@+id/ID_ED_MEMBER"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:ems="10"
                            android:focusableInTouchMode="true"
                            android:inputType="text|textNoSuggestions|textMultiLine|textFilter"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/ID_BTN_TO_ADD"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="3dip"
                            android:layout_marginRight="5dip"
                            android:layout_marginTop="3dip"
                            android:background="@drawable/btn_plus" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/light_gray" >
                    </View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ID_LAY_L_CB_ORIGNAL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="1"
                            android:text="@string/label_squareplus_square_create_opencheck"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <CheckBox
                            android:id="@+id/ID_CB_OPEN_CHECK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:button="@drawable/style_btn_checkbox_blue"
                            android:text="@string/label_squareplus_square_create_open"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="5dip"
                            android:layout_weight="6"
                            android:text="@string/squareplus_group_make_security_desc"
                            android:textColor="#495057"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/light_gray" >
                    </View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ID_LAY_L_CONTENT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView0001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="5dip"
                        android:text="@string/label_squareplus_new_square_description"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/ID_ED_GROUP_DESC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="5dip"
                        android:background="@color/white"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="textMultiLine|textWebEditText"
                        android:textColor="@color/black"
                        android:textSize="15sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ID_LAY_L_ORIGINAL"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/ID_TV_ORIGINAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>