<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/menu_section_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/style_section_background" >

        <TextView
            android:id="@+id/menu_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/label_menu_mail"
            android:textColor="@color/menu_title_text_color"
            android:textSize="16sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/menu_section_toggle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/style_btn_more_menu"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/visible_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>