<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="61.7dp"
    android:background="#fff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ID_LAY_L_HOME_MENU_HOLDER"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/lnb_menu_gd_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ID_IMG_HOME_MENU_ICON"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/btn_home_category_mail" />

        <TextView
            android:id="@+id/ID_TV_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="공단지원현황"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#4b4b4b"
            android:textSize="9.3sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/badge_count"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/badge_radius"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="7.3sp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>