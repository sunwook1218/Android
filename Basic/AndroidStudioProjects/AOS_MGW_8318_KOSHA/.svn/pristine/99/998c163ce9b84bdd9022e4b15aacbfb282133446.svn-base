<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ID_IMG_FILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dummy_string"
        android:src="@drawable/file_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="clip_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ID_TV_FILE_NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버웍스 제품소개서.jpg"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ID_TV_FILE_INFO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_square_contents_detail_file_info_format"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ID_BTN_FILE_BOOKMARK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:contentDescription="@string/dummy_string"
        android:focusable="false"
        android:src="@drawable/btn_comment_bookmark" />

    <ImageButton
        android:id="@+id/ID_BTN_FILE_MORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:contentDescription="@string/dummy_string"
        android:focusable="false"
        android:src="@drawable/btn_comment_menu" />

</LinearLayout>