<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/ID_IV_SP_WRITE_THUMBNAIL"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sp_no_image" />
    
    <ImageView 
        android:id="@+id/ID_IV_SP_THUMBNAIL_DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ID_IV_SP_WRITE_THUMBNAIL"
        android:layout_alignRight="@+id/ID_IV_SP_WRITE_THUMBNAIL"
        android:src="@drawable/sp_thumbnail_delete"/>

</RelativeLayout>