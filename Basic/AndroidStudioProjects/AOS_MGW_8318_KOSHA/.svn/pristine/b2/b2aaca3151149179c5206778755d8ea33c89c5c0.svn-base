<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="false"
    android:gravity="center"
    android:padding="25dp"
    android:background="#aa000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_basic_radius_white_back_hu"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="OTP인증"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="19sp"
                android:layout_gravity="left"
                android:gravity="center"
                />
            <Button
                android:id="@+id/otp_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:id="@+id/otp_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                >

                <TextView
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="X"
                    android:gravity="center"
                    android:background="@drawable/style_btn_basic_circle_gray_back_hu"
                    android:textColor="#888"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#888"
            android:orientation="vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP 로그인으로"
                android:textColor="#000"
                android:textSize="19sp"
                android:layout_gravity="left"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더욱 안전하게 사용하실 수 있습니다."
                android:textColor="#000"
                android:textSize="19sp"
                android:singleLine="true"
                android:layout_gravity="left"
                />

            <EditText
                android:id="@+id/otp_num"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:layout_marginTop="20dp"
                android:textSize="19sp"
                android:hint="OTP 인증번호"
                android:textColorHint="#888"
                android:background="@drawable/template_input_radius_otp"/>

            <Button
                android:id="@+id/otp_confirm"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textColor="#636363"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_marginTop="5dp"
                android:text="확인"
                android:background="@drawable/style_btn_otp_blue_hu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="TouchEn mOTP"
                    android:textColor="#0A81AF"
                    android:textSize="19sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 사용중입니다."
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호를 입력하세요"
                android:textColor="#000"
                android:textSize="19sp"
                android:layout_gravity="left"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

