<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ID_LAY_L_ATTACH_FILE0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ID_IMG_ATTACH_FILE0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/file_doc" />

        <TextView
            android:id="@+id/ID_TV_ATTACH_FILE0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/label_square_attach_file_size"
            android:textColor="#959595"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ID_LAY_L_ATTACH_FILE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ID_IMG_ATTACH_FILE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/file_doc" />

        <TextView
            android:id="@+id/ID_TV_ATTACH_FILE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/label_square_attach_file_size"
            android:textColor="#959595"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ID_LAY_L_ATTACH_FILE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ID_IMG_ATTACH_FILE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/file_doc" />

        <TextView
            android:id="@+id/ID_TV_ATTACH_FILE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/label_square_attach_file_size"
            android:textColor="#959595"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ID_LAY_L_ATTACH_FILE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ID_IMG_ATTACH_FILE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/file_doc" />

        <TextView
            android:id="@+id/ID_TV_ATTACH_FILE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/label_square_attach_file_size"
            android:textColor="#959595"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ID_BTN_MORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/user_more" />

</LinearLayout>