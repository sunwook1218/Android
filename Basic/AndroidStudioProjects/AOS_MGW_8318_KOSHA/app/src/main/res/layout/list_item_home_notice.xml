<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#f7f7f7" >

        <LinearLayout
            android:id="@+id/board_memo_status_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.3dp"
            >

            <ImageView
                android:id="@+id/board_memo_status"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:src="@drawable/notice_bleat_sml"
                android:scaleType="center"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/board_ann_status"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:scaleType="center"
                android:src="@drawable/icon_board_ann"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/board_memo_emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/dummy_string"
                android:scaleType="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/board_memo_modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:contentDescription="@string/dummy_string"
                android:scaleType="center"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- <ImageView -->
        <!-- android:id="@+id/board_memo_attach" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_gravity="center_vertical" -->
        <!-- android:layout_marginLeft="5dp" -->
        <!-- android:layout_marginTop="5dp" -->
        <!-- android:background="#00000000" -->
        <!-- android:contentDescription="@string/dummy_string" -->
        <!-- android:scaleType="center" /> -->

        <TextView
            android:id="@+id/ID_TV_DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="13.3dip"
            android:text="am 10:20"
            android:textSize="11dp"
            android:textColor="#757575" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ID_TV_DATE"
            android:layout_toRightOf="@id/board_memo_status_box"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/ID_TV_TITLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Medium Text ium Text aMeda Text"
                android:textSize="13.3dp"
                android:textColor="#333333" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ID_LAY_L_SHADOW"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8c8c8"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>