<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_header"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/ID_BTN_BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/dummy_string"
            android:src="@drawable/style_btn_back" />

        <TextView
            android:id="@+id/middleNavibarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true" 
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:text="@string/label_squareplus_menu_search"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ID_LAY_R_SEARCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/search_bar_default" >

        <ImageView
            android:id="@+id/ID_IMG_SEARCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/dummy_string"
            android:src="@drawable/search_icon" />

        <ImageButton
            android:id="@+id/ID_BTN_CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:contentDescription="@string/dummy_string"
            android:src="@drawable/search_cancel" />

        <EditText
            android:id="@+id/ID_ED_SEARCH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/ID_BTN_CANCEL"
            android:layout_toRightOf="@id/ID_IMG_SEARCH"
            android:background="@color/transparent"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1" >
        </EditText>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/ID_LL_SEARCH_TYPE_SECLECT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="gone">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/ID_LL_SEARCH_CONTENTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/ID_TV_SEARCH_CONTENTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&apos;강&apos;"
                android:textColor="#404345"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/label_squareplus_search_contents"
                android:textColor="#404345"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/ID_LL_SEARCH_AUTHOR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/ID_TV_SEARCH_AUTHOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&apos;강&apos;"
                android:textColor="#404345"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/label_squareplus_search_author"
                android:textColor="#404345"
                android:textSize="14sp" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/ID_LL_SEARCH_TAG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/ID_TV_SEARCH_TAG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&apos;강&apos;"
                android:textColor="#404345"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/label_squareplus_search_tag"
                android:textColor="#404345"
                android:textSize="14sp" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/ID_LL_SEARCH_FILE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/ID_TV_SEARCH_FILE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&apos;강&apos;"
                android:textColor="#404345"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/label_squareplus_search_file"
                android:textColor="#404345"
                android:textSize="14sp" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />
    </LinearLayout>
    
    

</LinearLayout>