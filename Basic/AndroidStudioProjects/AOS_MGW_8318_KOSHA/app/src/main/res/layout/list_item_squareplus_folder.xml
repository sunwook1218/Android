<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ID_LINEAR_FOLDERVIEW"
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:background="#e6e6e6"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ID_TV_FOLDER_ICON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:contentDescription="@string/dummy_string"
        android:src="@drawable/sp_folder" />

    <TextView
        android:id="@+id/ID_TV_FOLDER_NAME"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/ID_IMG_INDICATOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:contentDescription="@string/dummy_string"
        android:src="@drawable/style_btn_squareplus_folder" />

</LinearLayout>