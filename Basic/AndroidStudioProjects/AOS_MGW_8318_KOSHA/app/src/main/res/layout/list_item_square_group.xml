<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ID_IMG_GROUP_BULLET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dummy_string"
        android:src="@drawable/icon_square_favorite" />

    <TextView
        android:id="@+id/ID_TV_WORKGROUP_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/ID_TV_NEW_COUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:background="@drawable/home_count"
        android:text="0"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/ID_IMG_INDICATOR"
        android:layout_width="12dp"
        android:layout_height="17dp"
        android:layout_marginRight="13.3dp"
        android:contentDescription="@string/dummy_string"
        android:src="@drawable/indicator_hu" />

</LinearLayout>